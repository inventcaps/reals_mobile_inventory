# Railway Deployment Environment Variables
# Copy these values to your Railway project settings

# Django Settings
SECRET_KEY=your-production-secret-key-here-generate-a-new-one
DEBUG=False
RAILWAY_ENVIRONMENT=production

# Allowed Hosts - Update with your Railway domain
ALLOWED_HOSTS=your-app-name.up.railway.app,www.your-app-name.up.railway.app

# Production Database (Railway PostgreSQL or Supabase)
PROD_DB_NAME=postgres
PROD_DB_USER=postgres
PROD_DB_PASSWORD=your-database-password
PROD_DB_HOST=your-database-host
PROD_DB_PORT=5432

# Django Log Level
DJANGO_LOG_LEVEL=INFO

# Optional: For HTTPS and security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
